--- a/dev/null
+++ b/arch/arm/boot/dts/overlays/mcp3421.dts
@@ -0,0 +1,20 @@
+/*
+ * Device tree overlay for Microchip mcp3202 12-Bit A/D Converters
+ */
+
+/dts-v1/;
+/plugin/;
+
+/ {
+	fragment@0 {
+		target = <&i2c_gpio>;
+		__overlay__ {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			adc_0: adc@0 {
+				compatible = "microchip,mcp3421";
+				reg = <0x68>;
+			};
+		};
+	};
+};
